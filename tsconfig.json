{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "sourceMap": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*"]
}
